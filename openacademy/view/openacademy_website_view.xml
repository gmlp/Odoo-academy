<openerp>
    <data>
        <record id="action_openacademy_teacher" model="ir.actions.act_window">
        <field name="name">Academy teachers</field>
        <field name="res_model">openacademy.teacher</field>
        </record>
        <record id="academy_teacher_form" model="ir.ui.view">
            <field name="name">Academy teachers: form</field>
            <field name="model">openacademy.teacher</field>
            <field name="arch" type="xml">
              <form>
                <sheet>
                  <label for="name"/> <field name="name"/>
                  <label for="biography"/>
                  <field name="biography"/>
                  <field name="course_ids">
                    <tree string="Courses" editable="bottom">
                        <field name="name"/>
                    </tree>
                  </field>
                </sheet>
              </form>
            </field>
          </record>
          <record id="action_openacademy_online_courses" model="ir.actions.act_window">
            <field name="name">Open Academy online courses</field>
            <field name="res_model">openacademy.online_course</field>
          </record>
          <record id="openacademy_online_course_search" model="ir.ui.view">
            <field name="name">Open Academy online courses: search</field>
            <field name="model">openacademy.online_course</field>
            <field name="arch" type="xml">
              <search>
                <field name="name"/>
                <field name="teacher_id"/>
              </search>
            </field>
          </record>
          <record id="openacademy_online_course_list" model="ir.ui.view">
            <field name="name">Open Academy courses: list</field>
            <field name="model">openacademy.online_course</field>
            <field name="arch" type="xml">
              <tree string="Online Courses"> 
                <field name="name"/> 
                <field name="teacher_id"/> 
              </tree>
            </field>
          </record>
          <record id="openacademy_online_course_form" model="ir.ui.view">
            <field name="name">Open Academy courses: form</field>
            <field name="model">openacademy.online_course</field>
            <field name="arch" type="xml">
              <form>
                <sheet>
                  <label for="name"/>
                  <field name="name"/>
                  <label for="teacher_id"/>
                  <field name="teacher_id"/>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>                    
              </form>
            </field>
          </record>
        <menuitem sequence="0" id="menu_academy" name="Academy"/>
        <menuitem id="menu_academy_content" parent="menu_academy"
                name="Academy Content"/>
        <menuitem id="menu_openacademy_content_courses"
                    parent="menu_academy_content"
                    action="action_openacademy_online_courses"/>
        <menuitem id="menu_academy_content_teachers"
                parent="menu_academy_content"
            action="action_openacademy_teacher"/>
    </data>
</openerp>
